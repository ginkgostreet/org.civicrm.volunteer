<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Volunteer</base>
  <class>VolunteerAppeal</class>
  <name>civicrm_volunteer_appeal</name>
  <comment>VOLUNTEERAPPEAL</comment>
  <add>4.4</add>
  <log>true</log>
  <field>
    <name>id</name>
    <title>CiviVolunteer Appeal ID</title>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique Volunteer Appeal ID</comment>
    <add>4.4</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
    <name>project_id</name>
    <title>CiviVolunteer Project ID</title>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Foreign key to the Volunteer Project for this record</comment>
  </field>
  <foreignKey>
    <name>project_id</name>
    <table>civicrm_volunteer_project</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>
  <field>
    <name>title</name>
    <title>Appeal Title</title>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <comment>The title of the Volunteer Appeal</comment>
  </field>
  <field>
    <name>image</name>
    <title>Appeal Image</title>
    <type>varchar</type>
    <length>255</length>
    <comment>The Image of the Volunteer Appeal.</comment>
  </field>
  <field>
    <name>appeal_teaser</name>
    <title>Appeal Teaser</title>
    <type>text</type>
    <required>false</required>
    <comment>Appeal Teaser</comment>
  </field>
  <field>
    <name>appeal_description</name>
    <title>Appeal Description</title>
    <type>text</type>
    <required>false</required>
    <comment>Full description of the Volunteer Appeal. Text and HTML allowed.</comment>
    <html>
      <type>RichTextEditor</type>
      <rows>8</rows>
      <cols>60</cols>
    </html>
  </field>
  <field>
    <name>loc_block_id</name>
    <type>int unsigned</type>
    <title>Location Block ID</title>
    <comment>FK to Location Block ID</comment>
  </field>
  <foreignKey>
    <name>loc_block_id</name>
    <table>civicrm_loc_block</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>
  <field>
    <name>location_done_anywhere</name>
    <title>Set Location done anywhere parameter for Volunteer Appeal.</title>
    <type>int</type>
    <length>1</length>
    <comment>Location Done Anywhere "1" Means Location Done Anywhere True and "0" Means not true.</comment>
  </field>
  <field>
    <name>is_appeal_active</name>
    <title>Volunteer Appeal Active Or Not</title>
    <type>int</type>
    <length>1</length>
    <comment>Volunteer Appeal is Active or not. "1" Means "Active" and "0" Means Not Active.</comment>
    <add>4.4</add>
  </field>
  <field>
    <name>active_fromdate</name>
    <title>Active From Date of Appeal</title>
    <type>date</type>
    <comment>Active From Date of Appeal</comment>
  </field>
  <field>
    <name>active_todate</name>
    <title>Active To Date of Appeal</title>
    <type>date</type>
    <comment>Active To Date of Appeal</comment>
  </field>
  <field>
    <name>display_volunteer_shift</name>
    <title>Display Volunteer Shift or not.</title>
    <type>int</type>
    <length>1</length>
    <comment>Display Volunteer Shift or not.</comment>
  </field>
  <field>
    <name>hide_appeal_volunteer_button</name>
    <title>Hide Volunteer Appeal Button or not.</title>
    <type>int</type>
    <length>1</length>
    <comment>Hide Volunteer Appeal Button or not. "1" means Hide and "0" means Not Hide.</comment>
  </field>
</table>
